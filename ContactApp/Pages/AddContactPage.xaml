<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactApp.Pages.AddContactPage"
             Title="AddContactPage">
    <VerticalStackLayout>

        <!--<Label 
            Text="Add Contacts"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />-->
        
        <HorizontalStackLayout>
        <Button Grid.ColumnSpan="1" Text="Back" Clicked="OnBackClicked" Margin="0,0,0,0" />

        <Button Grid.ColumnSpan="2" Text="Add Contact" Clicked="OnAddContactClicked" Margin="0,20,0,0" />
        </HorizontalStackLayout>
    
        <Entry Placeholder="First Name" x:Name="FirstNameEntry" Margin="0,10,0,0" />
        <Entry Placeholder="Last Name" x:Name="LastNameEntry" Margin="0,10,0,0" />
        <Entry Placeholder="Phonenumber" x:Name="PhoneEntry" Margin="0,10,0,0" />
        <Entry Placeholder="Email" x:Name="EmailEntry" Margin="0,10,0,0" />
        <Entry Placeholder="Streetaddress" x:Name="StreetaddressEntry" Margin="0,10,0,0" />
        <Entry Placeholder="City" x:Name="CityEntry" Margin="0,10,0,0" />
       


    </VerticalStackLayout>
</ContentPage>